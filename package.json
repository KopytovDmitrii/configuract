{
  "name": "js-framework",
  "version": "1.0.0",
  "description": "Реактивный JS фреймворк для рендеринга HTML",
  "main": "dist/js-framework.iife.js",
  "module": "dist/js-framework.es.js",
  "exports": {
    ".": {
      "import": "./dist/js-framework.es.js",
      "require": "./dist/js-framework.iife.js"
    }
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "javascript",
    "framework",
    "typescript",
    "reactive",
    "html",
    "dom"
  ],
  "author": "JS Framework Team",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "jest-environment-jsdom": "^29.7.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "prettier": "^3.1.0",
    "terser": "^5.24.0"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KopytovDmitrii/configuract.git"
  },
  "bugs": {
    "url": "https://github.com/js-framework/js-framework/issues"
  },
  "homepage": "https://github.com/js-framework/js-framework#readme"
}